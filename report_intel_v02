                { icon: 'üè≠', title: 'Esecuzione della Fonderia', items: ['Consegna puntuale di Intel 18A (H2 2025)', 'Annunci di clienti "whale" (grandi partner)', 'Percorso verso la redditivit√† della Foundry (pareggio entro 2027)'] },
                { icon: 'üíª', title: 'Competitivit√† dei Prodotti', items: ['Stabilizzazione delle quote di mercato PC & Data Center', 'Crescita dei ricavi degli acceleratori Gaudi AI', 'Roadmap AI competitiva contro Nvidia'] },
                { icon: 'üí∞', title: 'Disciplina Finanziaria', items: ['Ritorno a margini lordi sani (>50%)', 'Flusso di cassa libero positivo', 'Controllo del debito e gestione efficiente del capitale'] },
                { icon: 'üë•', title: 'Stabilit√† della Leadership', items: ['Nessuna partenza di alto livello nei ruoli chiave', 'Consistenza nella comunicazione strategica'] }
            ];

            const scenariosData = [
                { color: 'green', title: 'Caso "Deep Value"', description: 'Il mercato prezza un fallimento quasi totale. Se il team di Tan esegue anche solo moderatamente bene, il potenziale di rivalutazione √® enorme, poich√© il titolo √® scambiato sotto il valore di libro.' },
                { color: 'amber', title: 'Caso "Scommessa ad Alto Rischio"', description: 'L\'esito √® binario. Il successo significa un ritorno multiplo sul capitale. Il fallimento potrebbe significare una svalutazione permanente, con l\'azienda che lotta sotto una montagna di debiti e asset non competitivi.' },
                { color: 'red', title: 'Caso "Trappola di Valore"', description: 'L\'azienda continua a bruciare cassa, non riesce a conquistare clienti significativi per la fonderia e il suo business di prodotti si erode. Il basso P/B si rivela un miraggio, poich√© il valore di libro stesso diminuisce.' }
            ];

            const ctx = document.getElementById('financialChart').getContext('2d');
            let chart;
            let activeMetrics = ['revenue'];

            function updateChart() {
                const datasets = activeMetrics.map(metric => {
                    const datasetConfig = financialData.datasets[metric];
                    return {
                        label: datasetConfig.label,
                        data: datasetConfig.data,
                        borderColor: datasetConfig.color,
                        backgroundColor: `${datasetConfig.color}33`,
                        fill: 'origin',
                        yAxisID: datasetConfig.yAxisID,
                        tension: 0.1,
                        borderWidth: 2,
                        pointRadius: 2,
                        pointHoverRadius: 5
                    };
                });
                
                chart.data.datasets = datasets;

                const activeAxes = new Set(datasets.map(d => d.yAxisID));
                const showAxesWhenEmpty = activeMetrics.length === 0;

                Object.keys(chart.options.scales).forEach(axisId => {
                    if (axisId.startsWith('y')) {
                        chart.options.scales[axisId].display = showAxesWhenEmpty || activeAxes.has(axisId);
                    }
                });

                chart.update();
            }

            function initializeChart() {
                chart = new Chart(ctx, {
                    type: 'line',
                    data: { labels: financialData.labels, datasets: [] },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: { mode: 'index', intersect: false },
                        scales: {
                            x: { ticks: { color: '#475569' }, grid: { display: false } },
                            yDollars: { type: 'linear', position: 'left', display: false, grid: { color: '#e2e8f0' }, ticks: { color: '#0ea5e9', callback: function(value) { return value + 'B'; } }, title: { display: true, text: 'Miliardi ($)', color: '#0ea5e9' } },
                            yPercent: { type: 'linear', position: 'right', display: false, grid: { drawOnChartArea: false }, ticks: { color: '#8b5cf6', callback: function(value) { return value + '%'; } }, title: { display: true, text: 'Percentuale (%)', color: '#8b5cf6' } },
                            yRatio: { type: 'linear', position: 'right', display: false, grid: { drawOnChartArea: false }, ticks: { color: '#f97316' }, title: { display: true, text: 'Rapporto (x)', color: '#f97316' } }
                        },
                        plugins: {
                            legend: { display: true, position: 'top', labels: { color: '#334155' } },
                            tooltip: { callbacks: { label: function(context) { let label = context.dataset.label || ''; if (label) { label += ': '; } if (context.parsed.y !== null) { label += context.parsed.y.toFixed(2); } return label; } } }
                        }
                    }
                });
                updateChart();
            }

            const metricButtons = document.querySelectorAll('.metric-button');
            metricButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const metric = button.dataset.metric;
                    button.classList.toggle('active');
                    if (activeMetrics.includes(metric)) {
                        activeMetrics = activeMetrics.filter(m => m !== metric);
                    } else {
                        activeMetrics.push(metric);
                    }
                    updateChart();
                });
            });

            function showPage(pageId) {
                document.querySelectorAll('.page-view').forEach(page => {
                    page.classList.remove('active');
                });
                document.getElementById(pageId).classList.add('active');
                window.scrollTo(0, 0);
            }

            function setupLeadershipCards() {
                const container = document.getElementById('leadership-cards');
                const detailContainer = document.getElementById('member-detail-container');
                
                container.innerHTML = leadershipData.map((person, index) => `
                    <div class="bg-white rounded-lg shadow-md p-6 text-center cursor-pointer profile-card nav-button" data-index="${index}" data-target="detail-content">
                        <img src="${person.img}" alt="Foto di ${person.name}" class="w-24 h-24 rounded-full mx-auto mb-4 object-cover pointer-events-none">
                        <h4 class="font-bold text-lg text-slate-900 pointer-events-none">${person.name}</h4>
                        <p class="text-sky-700 text-sm pointer-events-none">${person.title}</p>
                    </div>
                `).join('');

                container.addEventListener('click', (e) => {
                    const card = e.target.closest('.profile-card');
                    if (card) {
                        const person = leadershipData[card.dataset.index];
                        detailContainer.innerHTML = `
                            <button class="back-to-main mb-8 inline-flex items-center text-sky-700 hover:text-sky-900 transition-colors">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                                Torna alla Panoramica
                            </button>
                            <div class="grid md:grid-cols-3 gap-8 md:gap-12 bg-white p-8 rounded-lg shadow-xl">
                                <div class="md:col-span-1 text-center">
                                    <img src="${person.img}" alt="Foto di ${person.name}" class="w-40 h-40 rounded-full mx-auto mb-4 object-cover">
                                    <h2 class="text-3xl font-bold text-slate-900">${person.name}</h2>
                                    <p class="text-xl text-sky-700">${person.title}</p>
                                </div>
                                <div class="md:col-span-2 space-y-8">
                                    <div><h3 class="text-2xl font-bold border-b-2 border-sky-200 pb-2 mb-4 text-sky-800">Profilo Esecutivo</h3><p class="text-lg text-slate-600">${person.details.summary}</p></div>
                                    <div><h3 class="text-2xl font-bold border-b-2 border-sky-200 pb-2 mb-4 text-sky-800">Successi Chiave</h3><p class="text-slate-600">${person.details.successes}</p></div>
                                    <div><h3 class="text-2xl font-bold border-b-2 border-sky-200 pb-2 mb-4 text-sky-800">Filosofia di Management</h3><p class="text-slate-600">${person.details.philosophy}</p></div>
                                    <div><h3 class="text-2xl font-bold border-b-2 border-sky-200 pb-2 mb-4 text-sky-800">La Sfida in Intel</h3><p class="text-slate-600">${person.details.intelChallenge}</p></div>
                                </div>
                            </div>`;
                        showPage('detail-content');
                        detailContainer.querySelector('.back-to-main').addEventListener('click', () => showPage('main-content'));
                    }
                });
            }

            function setupNavigation() {
                document.body.addEventListener('click', function(e) {
                    const navButton = e.target.closest('.nav-button');
                    if(navButton) {
                        const targetId = navButton.dataset.target;
                        if (targetId && targetId !== 'detail-content') {
                             showPage(targetId);
                        }
                    }
                    if (e.target.closest('.back-to-main')) {
                        showPage('main-content');
                    }
                });
            }

            function setupKPIs() {
                const container = document.getElementById('kpi-list');
                container.innerHTML = kpiData.map(kpi => `<li class="bg-white p-4 rounded-lg shadow-sm"><h4 class="font-semibold text-lg flex items-center"><span class="text-2xl mr-3">${kpi.icon}</span><span>${kpi.title}</span></h4><ul class="list-disc list-inside mt-2 text-slate-600 pl-4 space-y-1">${kpi.items.map(item => `<li>${item}</li>`).join('')}</ul></li>`).join('');
            }

            function setupScenarios() {
                const container = document.getElementById('scenarios-list');
                const colorMap = { green: 'border-green-500', amber: 'border-amber-500', red: 'border-red-500' };
                container.innerHTML = scenariosData.map(scenario => `<div class="bg-white p-6 rounded-lg shadow-sm border-l-4 ${colorMap[scenario.color]}"><h4 class="font-bold text-xl mb-2 text-slate-800">${scenario.title}</h4><p class="text-slate-600">${scenario.description}</p></div>`).join('');
            }

            function setupMobileMenu() {
                const button = document.getElementById('mobile-menu-button');
                const menu = document.getElementById('mobile-menu');
                button.addEventListener('click', () => menu.classList.toggle('hidden'));
                menu.addEventListener('click', (e) => { if(e.target.tagName === 'A') menu.classList.add('hidden'); });
            }

            function setupNavHighlight() {
                const sections = document.querySelectorAll('#main-content section');
                const navLinks = document.querySelectorAll('#main-nav .nav-link, #mobile-menu .nav-link');
                window.addEventListener('scroll', () => {
                    let current = '';
                    if (document.getElementById('main-content').classList.contains('active')) {
                        sections.forEach(section => {
                            const sectionTop = section.offsetTop;
                            if (pageYOffset >= sectionTop - 100) {
                                current = section.getAttribute('id');
                            }
                        });
                    }
                    navLinks.forEach(link => {
                        link.classList.remove('active-nav');
                        if (current && link.getAttribute('href').includes(current)) {
                            link.classList.add('active-nav');
                        }
                    });
                });
            }

            document.querySelector('.metric-button[data-metric="revenue"]').classList.add('active');
            initializeChart();
            setupLeadershipCards();
            setupNavigation();
            setupKPIs();
            setupScenarios();
            setupMobileMenu();
            setupNavHighlight();
        });
    </script>
</body>
</html>
